<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mr_cast_progressbar_background_light"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/dialog_comment_content"
        android:layout_width="0dp"
        android:layout_height="77dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:ems="10"
        android:gravity="left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.008" />

    <Button
        android:id="@+id/dialog_comment_send"
        android:layout_width="96dp"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:background="@color/mr_cast_progressbar_progress_and_thumb_light"
        android:text="发送"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_comment_content" />

</androidx.constraintlayout.widget.ConstraintLayout>